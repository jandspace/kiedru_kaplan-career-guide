#wrapper {
	section {
		&.block-webform {
			padding: 30px 0;
			background: rgb(36,15,110);
			background: -moz-linear-gradient(-45deg,  rgba(36,15,110,1) 0%, rgba(124,111,168,1) 100%);
			background: -webkit-linear-gradient(-45deg,  rgba(36,15,110,1) 0%,rgba(124,111,168,1) 100%);
			background: linear-gradient(135deg,  rgba(36,15,110,1) 0%,rgba(124,111,168,1) 100%);
			filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#240f6e', endColorstr='#7c6fa8',GradientType=1 );

			@mixin sm-min {
				padding: 4% 0;
			}

			label {
				input[type="radio"],
				input[type="checkbox"] {
					left: 0;
					margin-left: 0;

					&:focus {
						outline: none;
					}
				}
			}
			
